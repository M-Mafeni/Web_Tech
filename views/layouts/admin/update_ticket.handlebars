{{> header title = "Astra | Update Ticket"}}

<body>
    {{> navbar }}
    {{> prompt}}

    <div class = "account-wrapper">
        <h1 class="title-header">Update Ticket</h1>

        <div class="admin_bar booking_bar booking_form">
            <form id = "update_ticket" action="/admin/tickets/{{ticket.id}}" method="POST">
                <label class= "email-label" for="origin">Origin</label>
                <input list = "places" type="text" name="origin" value="{{ticket.origin_place}}" placeholder="Enter Origin Base" required=""></input>
                <label class= "email-label" for="destination">Destination</label>
                <input list = "places" type="text" name="destination" value="{{ticket.destination_place}}" placeholder="Enter Destination Base" required="" class="dest"></input>
                <datalist id="places">
                    {{#each destinations}}
                        <option value="{{name}}"></option>
                    {{/each}}
                </datalist>
                <label class= "email-label" for="outbound_date">Outbound Date</label>
                <input id="outbound_date" type="date" name="outbound_date" value="{{ticket.o_date}}" required=""></input>
                <label class= "email-label" for="outbound_time">Outbound Time</label>
                <input id="outbound_time" type="time" name="outbound_time" value="{{ticket.o_time}}" required=""></input>
                <label class= "email-label" for="inbound_date">Inbound Date</label>
                <input type="date" name="inbound_date" value="{{ticket.d_date}}" required=""></input>
                <label class= "email-label" for="inbound_time">Inbound Time</label>
                <input id="inbound_time" type="time" name="inbound_time" value="{{ticket.d_time}}" required=""></input>
                <label class= "email-label" for="price">Price</label>
                <input id="price" type="number" name="price" value="{{ticket.price}}" required=""></input>
            </form>

            <div class="login-btns">
                <button class="btn" form="update_ticket" type="submit">Update Ticket</button>
                <a href="/admin/tickets"><button class="btn" type="submit">Back</button></a>
            </div>
            
        </div>



