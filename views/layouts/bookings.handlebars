    <head>
        <link rel="icon" media="(prefers-color-scheme:light)" type="image/png" href="/assets/favicon_black.png"></link>
        <meta charset="utf-8"/>
        <title>Astra | Bookings</title>
    </head>

    <body>
        <div class="nav-items" id= "topnav">
            <a href="/" class="brand-logo"><img class="nav_logo" src="/assets/logo_white_embedded.svg"></img></a>
            <a href="/" class="brand-favicon"><img class="nav_favicon" src="/assets/favicon_white.png"></img></a>
            <a href="#" class="icon" onclick="makeBarResponsive()"><i class="fa fa-bars"></i></a>
           <div class="nav-wrapper" id="mobile-nav">
               <a class="nav_links" href="#" onclick="openForm()">Login/Register</a>
           </div>
        </div>

        <div class="login-form" id = "loginForm">
            <form class="login-form-container" id = "loginFormContent" action="/login" method="post">
                <h1 class="login-title">Login</h1>
                <label for="email">Email</label>
                <div class="form_item">
                    <input type="text" name="email" placeholder="Enter Email" required=""></input>
                </div>

                <label for="psw">Password</label>
                <div class="form_item">
                    <input type="password" name="psw" placeholder="Enter Password" class="form_item" required=""></input>
                </div>
                <button type="submit" class="btn">Login</button>
                <button type="reset" class="btn cancel" onclick="closeForm()">Close</button>
            </form>
        </div>

        <div class = "summary-icon">
            <span id="summary-title-mobile">No ticket selected</span>
            <i class="fa fa-angle-double-down disable-fa" onclick="closeSummary()"></i>
            <i class="fa fa-angle-double-up disable-fa" onclick="showSummary()"></i>
            <div id = "summary_price_mobile" class = "summary_price_mobile"></div>

            <div class = "summary-mobile" id="mobile_summary">
                <p class = "summary_details_mobile_source">
                    <div class = "date departureDate"></div>
                    <span class = "time departureTime"></span>
                    <span class = "location departureLocation"></span>
                </p>
                <p class = "summary_details_mobile_destination">
                    <div class = "date arrivalDate"></div>
                    <span class = "time arrivalTime"></span>
                    <span class = "location arrivalLocation"></span>
                </p>
            </div>
            <button class="btn continue-mobile no-continue">Continue</button>
        </div>

        <div class="row">
            {{#if tickets}}
                    <div class="column tickets">
                <h1>Outbound Journeys</h1>
                    {{#each tickets}}
                    <div class="ticket-card">
                        <div class="ticket-content price">Â£{{price}}</div>
                        <div class="ticket-content source" >
                            <span class="date">{{o_date}}</span>
                            <br/>
                             <i class="fa fa-clock-o"></i>
                             <span class="time">{{o_time}}</span>
                             <br/>
                             <i class="fa fa-map-marker"></i>
                            <span class="location">{{origin_place}}</span>
                        </div>
                        <div class="ticket-content sideways_rocket">
                            <img src="assets/sideways_rocket.svg"></img>
                        </div>
                        <div class="ticket-content destination">
                            <span class="date">{{d_date}}</span>
                            <br/>
                             <i class="fa fa-clock-o"></i>
                             <span class="time">{{d_time}}</span>
                             <br/>
                             <i class="fa fa-map-marker"></i>
                            <span class="location">{{destination_place}}</span>
                        </div>
                    </div>
                    {{/each}}
            </div>
            <span id = "summaryTop"></span>
            <div class="column summary" id = "summary">
                <h1>Summary</h1>
                <p id = "unselected">No ticket selected</p>
                <div id = "summary_price" class = "summary_price"></div>
                <div id = "summary_details" class = "summary_details">
                    <div class = "date departureDate"></div>
                    <span class = "time departureTime"></span>
                    <span class = "location departureLocation"></span>
                    <div id = "arrivalDate" class = "date arrivalDate"></div>
                    <span class = "time arrivalTime"></span>
                    <span class = "location arrivalLocation"></span>
                </div>

                <button type="button" name="continue" class = "btn no-continue">Continue</button>
        </div>
            {{else}}
                <no-tickets>
            No tickets available for this journey
        </no-tickets>
            {{/if}}





        </div>

    </body>
