<h1 class="Journey_Text">{{heading}}</h1>
    {{#if isAdmin}}
    <div class="booking_bar">
        <form class="booking_form" action="#" method="GET">

            <span class = "booking_left">
                <div class="form_item">
                    <input list = "places" type="text" name="origin" placeholder="Enter Origin Base">
                    </input>
                </div>
                <div class="form_item">
                    <input list = "places" type="text" name="destination" placeholder="Enter Destination Base"  class="dest"></input>
                </div>
                <datalist id="places">
                    {{#each destinations}}
                        <option value="{{name}}"></option>
                    {{/each}}
                </datalist>
            </span>
            <span class = "booking_right">
                <div class="form_item">
                    <input id="outbound_date" type="date" name="outbound_date" value="" ></input>
                </div>
                <div class="form_item">
                    <input type="date" name="inbound_date" value="" ></input>
                </div>
            </span>
            <div class="booking_button">
                <input class="btn" type="submit" value ="Filter Tickets"></input>
            </div>
        </form>
    </div>
    {{/if}}
    {{#each ticketData}}
        <div class="ticket-card">
            <div class="ticket_id">{{id}}</div>
            <div class="ticket-content price">Â£{{price}}</div>
            <div class="ticket-content source">
                <span class="date">{{o_date}}</span>
                <br/>
                 <i class="fa fa-clock-o"></i>
                 <span class="time">{{o_time}}</span>
                 <br/>
                 <i class="fa fa-map-marker"></i>
                <span class="location">{{origin_place}}</span>
            </div>
            <div class="ticket-content sideways_rocket">
                <img src="/assets/sideways_rocket.svg"></img>
            </div>
            <div class="ticket-content destination">
                <span class="date">{{d_date}}</span>
                <br/>
                 <i class="fa fa-clock-o"></i>
                 <span class="time">{{d_time}}</span>
                 <br/>
                 <i class="fa fa-map-marker"></i>
                <span class="location">{{destination_place}}</span>
            </div>
        </div>
    {{/each}}
